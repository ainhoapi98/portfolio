{
  "compilerOptions": {
    "baseUrl": "./app/",
    "jsx": "react-jsx",
    "module": "esNext",
    "outDir": "./dist/",
    "declaration": false,
    "noEmit": false,
    "types": [
      "./types/styled.d.ts",
      "./types/typings.d.ts"
    ],
    "target": "es2022",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "incremental": true,
    "strict": true,
    "esModuleInterop": true
  },
  "exclude": [
    "./node_modules/*",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "./internals/*",
    "./dist/*",
    "**/*.js",
    "**/*.jsx",
    "./app/vendor/*",
    "./dist/**/*",
    "**/*.config.*"
  ],
  "include": [
    "app/**/*",
    ".storybook/**/*"
  ]
}
